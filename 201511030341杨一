 //æ³¨è§ç¹çè®¾ç½®
 <text fixation>
 	/items = ("+")
 	/fontstyle = ("Arial", 40ptc)
 	/txbgcolor = (transparent)
 	/txcolor = (255,255,255)
 </text>
 <text different1txt>
 	/items = word1
 	/fontstyle = ("Arial",60ptc)
 	/txbgcolor = (0,0,0)
	/txcolor = (0,0,255)
 </text>
 
